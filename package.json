{
  "name": "simple-share",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build && node scripts/copy-functions.js",
    "preview": "vite preview",
    "build:worker": "npm run build",
    "deploy": "node scripts/prepare-wrangler.js && npm run build && npx wrangler deploy",
    "server:dev": "npx wrangler dev",
    "server:deploy": "npx wrangler deploy",
    "db:init": "cd server && npx wrangler d1 execute simpleshare-db --file=./src/db/schema.sql",
    "db:init:prod": "cd server && npx wrangler d1 execute simpleshare-db --remote --file=./src/db/schema.sql"
  },
  "dependencies": {
    "@auth0/auth0-vue": "^2.4.0",
    "@phosphor-icons/vue": "^2.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "axios": "^1.13.2",
    "jose": "^5.10.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251210.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vue-tsc": "^3.1.4",
    "wrangler": "^3.114.15"
  }
}
